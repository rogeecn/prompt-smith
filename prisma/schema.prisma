generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Project {
  id         String     @id @default(cuid())
  name       String
  created_at DateTime   @default(now())
  sessions   Session[]
}

model Session {
  id         String   @id @default(cuid())
  project    Project  @relation(fields: [projectId], references: [id])
  projectId  String
  created_at DateTime @default(now())
  history    Json
  state      Json?

  @@index([projectId])
}
